# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $terminal termite
#set $browser qutebrowser --enable-webengine-inspector
set $browser firefox

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
font pango:Iosevka Semibold 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
default_border none
default_floating_border none

# Set colors from Xresources
# Change 'color7' and 'color2' to whatever colors you want i3 to use 
# from the generated scheme.
# NOTE: The '#f0f0f0' in the lines below is the color i3 will use if
# it fails to get colors from Xresources.
set_from_resource $fg i3wm.foreground #f0f0f0
set_from_resource $bg i3wm.background #f0f0f0
#set_from_resource $fg i3wm.color0
#set_from_resource $bg i3wm.color8
set_from_resource $color0 i3wm.color0
set_from_resource $color1 i3wm.color1
set_from_resource $color2 i3wm.color2
set_from_resource $color3 i3wm.color3
set_from_resource $color4 i3wm.color4
set_from_resource $color5 i3wm.color5
set_from_resource $color6 i3wm.color6
set_from_resource $color7 i3wm.color7
set_from_resource $color8 i3wm.color8
set_from_resource $color9 i3wm.color9
set_from_resource $color10 i3wm.color10
set_from_resource $color11 i3wm.color11
set_from_resource $color12 i3wm.color12
set_from_resource $color13 i3wm.color13
set_from_resource $color14 i3wm.color14
set_from_resource $color15 i3wm.color15

# class                 border  backgr. text indicator child_border
client.focused          $bg     $fg     $bg  $fg       $fg
client.focused_inactive $bg     $fg     $bg  $fg       $fg
client.unfocused        $fg     $bg     $fg  $bg       $fg
client.urgent           $fg     $bg     $fg  $bg       $fg
client.placeholder      $fg     $bg     $fg  $bg       $fg

client.background       $bg
# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)

bar {
	tray_output primary
	i3bar_command i3bar
    status_command i3blocks
	position top
    colors {
        background $color0
        statusline $fg
        separator $fg
        focused_workspace $fg $fg $bg
    }
}

# Open command info
bindsym F1 exec $terminal -e "i3-help"

# Open editor
bindsym $mod+l exec editor

# Type username password and submit
bindsym $mod+Control+p exec mypassmenu --type

# Terminal
bindsym $mod+Return exec $terminal
# Browser
bindsym $mod+b exec $browser
# Thunar: file manager
bindsym $mod+t exec thunar
# Ranger: terminal file manager
bindsym $mod+r exec $terminal -e "ranger --cmd='cd /tmp'"
# kill focused window
bindsym $mod+q kill

# Switch to colemak
bindsym $mod+bracketleft exec setxkbmap -I ~/.xkb colemak -print | xkbcomp -I$HOME/.xkb - $DISPLAY
# Switch to qwerty
bindsym $mod+bracketright exec setxkbmap -variant ""

# Screenshot of whole screen
bindsym Print exec "cd /tmp;scrot -u"
# Screenshot of selected area
bindsym --release $mod+Print exec deepin-screenshot -s /tmp/ 2>&1 | grep -o '/tmp/Deepin[^"]*' | xargs xclip -selection clipboard -t image/png -i
#bindsym --release $mod+Print exec "cd /tmp;scrot -s"

# Rofi: start a program
bindsym $mod+a exec "rofi -combi-modi drun,run,ssh -show combi"

# Lock the screen
bindsym $mod+x exec "i3lock -ui ~/Pictures/active_lockscreen"
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
# multimedia
# Brightness down
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
# Brightness up
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
# Volume up
bindsym XF86AudioRaiseVolume exec --no-startup-id "amixer sset Master 5%+; pkill -RTMIN+10 i3blocks"
# Volume down
bindsym XF86AudioLowerVolume exec --no-startup-id "amixer sset Master 5%-; pkill -RTMIN+10 i3blocks"
# Volume mute
bindsym XF86AudioMute exec --no-startup-id "amixer sset Master toggle; pkill -RTMIN+10 i3blocks"
# Play/Pause
bindsym XF86AudioPlay exec "playerctl play-pause"
# Previous song
bindsym XF86AudioPrev exec "playerctl previous"
# Next song
bindsym XF86AudioNext exec "playerctl next"

# Change focus
bindsym $mod+h focus left
bindsym $mod+n focus down
bindsym $mod+e focus up
bindsym $mod+i focus right
bindsym $mod+p focus parent

# Change focus to next visible
bindsym $mod+u exec --no-startup-id ~/.config/i3/bin/focus_next_visible.py
bindsym $mod+Shift+u exec --no-startup-id ~/.config/i3/bin/focus_next_visible.py reverse

