#!/bin/bash

# Creator marvinroman@gmail.com
#
# Create's random password 
# Should work on Most UNIX systems
# Default with special characters with a length of 12
# Optional -a (alphanumeric)
# Optional -l <number> (length)

usage() { echo "Usage: $0 [-a] [-l <length>]" 1>&2; exit 1; }

CHARS='A-Za-z0-9_%#*@5k^&!$'
LENGTH=30
while getopts "achl:C:" o; do
  case "${o}" in
    a)
      CHARS='A-Za-z0-9_'
      ;;
    C)
      CHARS="${OPTARG}"
      ;;
    c)
      CLIPBOARD=yes
      ;;
    l)
      LENGTH=${OPTARG}
      ;;
    h)
      usage
      ;;
    *)
      exit 1
      ;;
  esac
done

shift $((OPTIND-1))

export LC_CTYPE=C
res=$(tr -dc "${CHARS}" < /dev/urandom | head -c ${LENGTH} | xargs)
if [ ! -z $CLIPBOARD ]; then
    echo -n "$res" | pbcopy
fi
echo "$res"
