#!/bin/bash
#
# -e: external ip

if [ $# -gt 0 ]; then
    if [ "$1" == '-e' ]; then
        #external
        curl ifconfig.co
    elif [ "$1" == "-p" ]; then
        #parallels
        ip addr | grep -A2 bridge100 | grep "inet " | get 2 | cut -d/ -f1
    elif [ "$1" == "-h" ]; then
        shift
        #hosts file
        rg -NI -o "^([^ ]+) $1\$" -r '$1' /etc/hosts
    else
        echo "Unknown argument: $1"
    fi
else
    ip addr | grep "inet " | grep -v "127.0.0.1" | head -n1 | get 2 | cut -d/ -f1
fi
